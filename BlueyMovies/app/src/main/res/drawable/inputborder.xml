<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Màu khi có focus -->
    <item android:color="@color/primaryinputcolor" android:state_focused="true">
        <shape>
            <corners android:radius="12dp"/>
            <solid android:color="@color/white"/>
            <stroke android:color="@color/primaryinputcolor" android:width="1dp"/>
        </shape>
    </item>
    <!-- Màu khi không có focus -->
    <item android:color="@color/secondaryinputcolor">
        <shape>
            <corners android:radius="12dp"/>
            <solid android:color="#F3F4F6"/>
        </shape>
    </item>
</selector>